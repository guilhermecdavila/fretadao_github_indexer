<div class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6">
  <div
    class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03] lg:p-6"
  >
    <h3
      class="mb-5 text-lg font-semibold text-gray-800 dark:text-white/90 lg:mb-7"
    >
      Github Usuário
    </h3>

    <div
      class="p-5 mb-6 border border-gray-200 rounded-2xl dark:border-gray-800 lg:p-6"
    >
      <div
        class="flex flex-col gap-5 xl:flex-row xl:items-center xl:justify-between"
      >
        <div
          class="flex flex-col items-center w-full gap-6 xl:flex-row"
        >
          <div
            class="w-20 h-20 overflow-hidden border border-gray-200 rounded-full dark:border-gray-800"
          >
            <%= image_tag @github_user.image_url %>
          </div>
          <div class="order-3 xl:order-2">
            <h4
              class="mb-2 text-lg font-semibold text-center text-gray-800 dark:text-white/90 xl:text-left"
            >
              <%= @github_user.name %>
            </h4>
            <div
              class="flex flex-col items-center gap-1 text-center xl:flex-row xl:gap-3 xl:text-left"
            >
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <%= @github_user.nickname %>
              </p>
              <div
                class="hidden h-3.5 w-px bg-gray-300 dark:bg-gray-700 xl:block"
              ></div>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <%= @github_user.location %>
              </p>
            </div>
          </div>
          <div
            class="flex items-center order-2 gap-2 grow xl:order-3 xl:justify-end"
          >

            <%= link_to "<i class='fa-brands fa-github-alt fa-lg'></i>".html_safe, @github_user.encripted_github_url, class: 'flex h-11 w-11 items-center justify-center gap-2 rounded-full border border-gray-300 bg-white text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 hover:text-gray-800 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-white/[0.03] dark:hover:text-gray-200', target: '_blank' %>
          </div>
        </div>

        <%= link_to edit_github_user_path(@github_user), class: 'flex w-full items-center justify-center gap-2 rounded-full border border-gray-300 bg-white px-4 py-3 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 hover:text-gray-800 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-white/[0.03] dark:hover:text-gray-200 lg:inline-flex lg:w-auto', data: { turbo: false, disable_with: "Aguarde...escaneando" } do %>
          <i class="fa fa-pencil fa-lg"></i>
          Editar
        <% end %>
        <%= link_to github_user_path(@github_user), class: 'flex w-full items-center justify-center gap-2 rounded-full border border-gray-300 bg-white px-4 py-3 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 hover:text-gray-800 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-white/[0.03] dark:hover:text-gray-200 lg:inline-flex lg:w-auto', data: { disable_with: "Aguarde...escaneando", turbo_method: :delete } do %>
          <i class="fa fa-trash fa-lg"></i>
          Excluir
        <% end %>
      </div>
    </div>

    <div class="p-5 mb-6 border border-gray-200 rounded-2xl dark:border-gray-800 lg:p-6">
      <div class="flex flex-col gap-6 lg:flex-row lg:items-start lg:justify-between">
        <div>
          <h4
            class="text-lg font-semibold text-gray-800 dark:text-white/90 lg:mb-6"
          >
            Informações do Perfil
          </h4>

          <div
            class="grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-7 2xl:gap-x-32"
          >
            <div>
              <p
                class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400"
              >
                Contribuições do último ano
              </p>
              <p
                class="text-sm font-medium text-gray-800 dark:text-white/90"
              >
                <%= @github_user.contribution || 0 %>
              </p>
            </div>

            <div>
              <p
                class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400"
              >
                Quantidade de Favoritos (Stars)
              </p>
              <p
                class="text-sm font-medium text-gray-800 dark:text-white/90"
              >
                <%= @github_user.stars || 0 %>
              </p>
            </div>

            <div>
              <p
                class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400"
              >
                Seguidores
              </p>
              <p
                class="text-sm font-medium text-gray-800 dark:text-white/90"
              >
                <%= @github_user.followers || 0 %>
              </p>
            </div>

            <div>
              <p
                class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400"
              >
                Seguindo
              </p>
              <p
                class="text-sm font-medium text-gray-800 dark:text-white/90"
              >
                <%= @github_user.following || 0 %>
              </p>
            </div>

            <div>
              <p
                class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400"
              >
                Organização
              </p>
              <p
                class="text-sm font-medium text-gray-800 dark:text-white/90"
              >
                <%= @github_user.organization || '-' %>
              </p>
            </div>
          </div>
        </div>

        <%= link_to rescanner_github_user_path(@github_user), class: 'flex w-full items-center justify-center gap-2 rounded-full border border-gray-300 bg-white px-4 py-3 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 hover:text-gray-800 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-white/[0.03] dark:hover:text-gray-200 lg:inline-flex lg:w-auto', data: { turbo: false, disable_with: "Aguarde...escaneando" } do %>
          <i class="fa fa-repeat fa-lg"></i>
          Escanear
        <% end %>
      </div>
    </div>
    <%= link_to github_users_path, class: 'flex w-full items-center justify-center gap-2 rounded-full border border-gray-300 bg-white px-4 py-3 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 hover:text-gray-800 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-white/[0.03] dark:hover:text-gray-200 lg:inline-flex lg:w-auto' do %>
      <i class="fa fa-angles-left fa-lg"></i>
      Voltar
    <% end %>
  </div>
</div>